{
  "name": "challenge-api",
  "version": "0.0.1",
  "description": "Challenge Backend API",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "mocha -r @babel/register ./tests/**/*.js --exit",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "clear-pm2": "pm2 stop app && pm2 delete app",
    "start": "npm run clear-pm2 && pm2 start --ext=js,json app.js --watch && pm2 logs app",
    "start-prod": "npm run clear-pm2 && pm2 start --ext=js,json ./dir/app.js --watch && pm2 logs app",
    "babel-node": "babel-node --presets @babel/preset-env",
    "build:watch": "npm-watch build",
    "sequelize": "sequelize",
    "migrate": "sequelize db:migrate",
    "unmigrate": "sequelize db:migrate:undo",
    "generate-migration": "sequelize migration:generate --name",
    "eslint": "eslint --quiet .",
    "lint": "npm run eslint"
  },
  "watch": {
    "build": "{config,core,db,routes,scripts,tests,utils}/*.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "javascript",
    "challenge",
    "node-js",
    "api"
  ],
  "author": "Vyzaldy Sanchez",
  "license": "MIT",
  "bugs": {
    "url": "repo/issues"
  },
  "homepage": "repo#readme",
  "dependencies": {
    "@sentry/node": "^5.7.1",
    "bluebird": "^3.7.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "redis": "^2.8.0",
    "sequelize": "^5.21.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/register": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.2.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/plugin-transform-destructuring": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "mocha": "^5.2.0",
    "npm-watch": "^0.4.0",
    "rimraf": "^2.6.2",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4"
  }
}
